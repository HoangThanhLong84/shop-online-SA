input#menu-toggle(type='checkbox')
.sidebar
  .side-header
    h3
      | A
      span dmin
  .side-content
    <div class="profile">
        <div class="profile-img bg-img" style="background-image: url(https://res.cloudinary.com/dhe34q7cd/image/upload/v1720447735/d9rvxsitng0jegl8ml3p.png)"></div>
        <h4>#{user.fullName}</h4>
        <small>#{role.title}</small>
    </div>
    .side-menu
      ul
        li
          a(href=`${prefixAdmin}/dashboard`)
            span.las.la-home
            small Tổng quan
        if(role.permission.includes("product-category_view"))
          li
            a(href=`${prefixAdmin}/product-category`)
              span.las.la-clipboard-list
              small Danh mục sản phẩm
        if(role.permission.includes("product_view"))
          li
            a(href=`${prefixAdmin}/products`)
              span.las.la-clipboard-list
              small Danh sách sản phẩm
        if(role.permission.includes("roles_view"))
          li
            a(href=`${prefixAdmin}/roles`)
              span.las.la-tasks
              small Nhóm quyền
        if(role.permission.includes("roles_permissions"))
          li
            a(href=`${prefixAdmin}/roles/permissions`)
              span.las.la-tasks
              small Phân quyền
        if(role.permission.includes("accounts_view"))
          li
            a(href=`${prefixAdmin}/accounts`)
              span.las.la-user-alt
              small Danh sách tài khoản
