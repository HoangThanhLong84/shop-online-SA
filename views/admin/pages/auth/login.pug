        .right
            h1 ĐĂNG NHẬP
            p.p1 Đăng nhập để tiếp tục quản lí Nông Sản GK.
            form.form(
                action=`${prefixAdmin}/auth/login`
                method="POST"
                )
                .input-box(class="form-group")
                    input.input(type="email"
                                class= "form-control"
                                id="email"
                                name="email"
                                required)
                    label(for='email') Email
                .input-box(class="form-group")
                    input.input(type="password"
                                class= "form-control"
                                id="password"
                                name="password"
                                required)
                    label(for='password') Password
                div(class="form-group")
                    button.btn-sec(type="submit"
                                   class="btn btn-primary btn-block") Đăng nhập
