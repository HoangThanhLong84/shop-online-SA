block main
    .container
        .left
            img.bg(src='https://res.cloudinary.com/dhe34q7cd/image/upload/v1720630202/o8nhmo8e3dptvipckb6a.jpg' alt='ảnh')
            .logo
                h1 Nông sản GK
            .left-content
                //- h1 LOGIN ADMIN PAGE
