extends ../../layout/default.pug
include ../../mixins/alert.pug
include ../../mixins/pagination.pug

include ../../mixins/search.pug

block main
    if(role.permission.includes("orders_view"))
        +alert-success(5000)
        +alert-error(5000)  
        div(class="page-header")
            h1 a
            small Admin / Orders 
        .page-content
            
            .card.mb-3 
                .card-header 
                    h4 Danh sách đơn hàng
                .card-body
                    .row
                        .col-8 
                        .col-2
                        .col-2
                table(
                    width='100%'
                    checkbox-multi
                )
                    thead 
                        tr
                            th STT
                            th Ngày tạo
                            th Tên khách hàng
                            th Địa chỉ
                            th Tổng tiền
                            th Loại thanh toán
                            th Tình trạng
                            th Xem chi tiết
                            

                    tbody
                        each item,index in orders
                            
                            tr
                                td #{pagination.limitItems*(pagination.currentPage - 1)+(index+1)}
                                td #{item.createdAt}
                                td #{item.userInfo.lastName} #{item.userInfo.firstName}
                                td #{item.userInfo.address}
                                td #{item.total}
                                if(item.Payments == "Payments")
                                    td Tiền mặt
                                
                                td
                                    if(role.permission.includes("orders_edit"))
                                        if(item.status == "not_delivery")
                                            a(
                                                href="javascript:;"
                                                data-status=item.status
                                                data-id= item.id
                                                button-change-status
                                                class="badge badge-danger"
                                            ) Chưa giao hàng
                                        else 
                                            a(
                                                href="javascript:;"
                                                data-status=item.status
                                                data-id= item.id
                                                button-change-status 
                                                class="badge badge-success"
                                            ) Đã giao hàng
                                    else 
                                        if(item.status == "not_delivery")
                                            a(
                                                
                                                data-status=item.status
                                                data-id= item.id
                                                
                                                class="badge badge-danger"
                                            ) Chưa giao hàng
                                        else 
                                            a(
                                                
                                                data-status=item.status
                                                data-id= item.id
                                                 
                                                class="badge badge-success"
                                            ) Đã giao hàng
                                td 
                                    a(
                                        href=`${prefixAdmin}/orders/detail/${item.id}`
                                        class="btn btn-secondary btn-sm"
                                    ) Chi tiết
                                    
            +pagination(pagination)
        
        form(
            action=""
            method="GET"
            id="form-change-status"
            data-path=`${prefixAdmin}/orders/change-status`
        )

        form(
            action=""
            method="POST"
            id="form-delete-item"
            data-path=`${prefixAdmin}/orders/delete`
        )

        script(src="/admin/js/order.js")
