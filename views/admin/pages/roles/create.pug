extends ../../layout/default.pug

block main
    if(role.permission.includes("roles_create"))
        <div class="page-header">
            <h1>a </h1>
            <small>Admin / Roles / Create</small>
        </div>
        .page-content
            h1(class="mb-4") Thêm mới nhóm quyền
            
            form(
                action=`${prefixAdmin}/roles/create`
                method="POST"
            )
                div(class="form-group")
                    label(for="title") Tiêu đề
                    input(
                        type="text"
                        class="form-control"
                        id="title"
                        name="title"
                        required
                    )

                div(class="form-group")
                    label(for="title") Mô tả
                    input(
                        type="text"
                        class="form-control"
                        id="desc"
                        name="description"  
                    )
                div(class="form-group")
                    button(
                        type="submit"
                        class="btn btn-primary"
                    ) Tạo mới