extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
        
    <!-- Hero Start -->
    <div class="container-fluid py-5 mb-5 hero-header">
        <div class="container py-5">
            <div class="row g-5 align-items-center">
                <div class="col-md-12 col-lg-7">
                    <h4 class="mb-3 text-secondary">Nông sản sạch</h4>
                    <h1 class="mb-5 display-3 text-primary">100% Sạch & Chất Lượng Cao</h1>
                    <div class="position-relative mx-auto">
                        form(
                            action="/search"
                            method="GET"
                        )
                            input(class="form-control border-2 border-secondary w-75 py-3 px-4 rounded-pill" type="text" placeholder="Nhập từ khóa..." class="form-control" name="keyword" value=keyword)
                            <button type="submit" class="btn btn-primary border-2 border-secondary py-3 px-4 position-absolute rounded-pill text-white h-100" style="top: 0; right: 25%;">Tìm kiếm</button>
                    </div>
                </div>
                <div class="col-md-12 col-lg-5">
                    <div id="carouselId" class="carousel slide position-relative" data-bs-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active rounded">
                                <img src="https://st4.depositphotos.com/1194063/20307/i/450/depositphotos_203078276-stock-photo-food-background-assortment-colorful-ripe.jpg" class="img-fluid w-100 h-100 bg-secondary rounded" alt="First slide">
                                <a href="#" class="btn px-4 py-2 text-white rounded">Trái cây</a>
                            </div>
                            <div class="carousel-item rounded">
                                <img src="https://nifc.gov.vn/files/media/202204/30-Foods-to-Eat-to-Get-Rid-of-Allergies-For-Good.jpg" class="img-fluid w-100 h-100 rounded" alt="Second slide">
                                <a href="#" class="btn px-4 py-2 text-white rounded">Nông sản</a>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    +alert-success(2000)
    
    <!-- Vesitable Shop Start-->
    <div class="container-fluid vesitable py-5">
        <div class="container py-5">
            <h1 class="mb-0">Sản phẩm mới</h1>
            <div class="owl-carousel vegetable-carousel justify-content-center">
                each item in productsNew
                    <div class="border border-primary rounded position-relative vesitable-item">
                        <div class="vesitable-img">
                            img(src=item.thumbnail class="img-fluid w-100 rounded-top" alt="")
                        </div>
                        <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">Mới</div>
                        <div class="p-4 rounded-bottom">
                            a(href=`/products/detail/${item.slug}` class="h4") #{item.title}
                            <p>!{item.description}</p>
                            <div class="d-flex justify-content-between flex-lg-wrap">
                                <p class="text-dark fs-5 fw-bold mb-0">#{item.priceNew}VNĐ</p>
                                form(
                                    action=`/cart/add/${item.id}`
                                    method="POST"
                                )
                                    <button class="btn border border-secondary rounded-pill px-3 text-primary" type="submit">
                                        | Thêm vào <i class="fa fa-shopping-bag me-2 text-primary"></i> 
                                    </button>
                            </div>
                        </div>
                    </div>
               
            </div>
        </div>
    </div>
    <!-- Vesitable Shop End -->

    

    <!-- Bestsaler Product Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="text-center mx-auto mb-5" style="max-width: 700px;">
                <h1 class="display-4">Sản phẩm nổi bật</h1>
                //- <p>Latin words, combined with a handful of model sentence structures, to generate Lorem Ipsum which looks reasonable.</p>
            </div>
            <div class="row g-4">
                each item in productsFeatured
                    <div class="col-lg-6 col-xl-4">
                        <div class="p-4 rounded bg-light">
                            <div class="row align-items-center">
                                <div class="col-6">
                                    img(src=item.thumbnail class="img-fluid rounded-circle w-100" alt="")
                                </div>
                                <div class="col-6">
                                    a(href=`/products/detail/${item.slug}` class="h5") #{item.title}
                                    
                                    <h4 class="mb-3">#{item.priceNew} đ/kg</h4>
                                    form(
                                        action=`/cart/add/${item.id}`
                                        method="POST"
                                    )
                                        <button class="btn border border-secondary rounded-pill px-3 text-primary" type="submit">
                                            | Thêm vào <i class="fa fa-shopping-bag me-2 text-primary"></i> 
                                        </button>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
             
            </div>
        </div>
    </div>
    <!-- Bestsaler Product End -->

   

    
    <!-- Banner Section Start-->
    <div class="container-fluid banner bg-secondary my-5">
        <div class="container py-5">
            <div class="row g-4 align-items-center">
                <div class="col-lg-6">
                    <div class="py-4">
                        <h1 class="display-3 text-white">TÌM SẢN PHẨM MỚI</h1>
                        <p class="fw-normal display-3 text-dark mb-4">ở Nông sản GK</p>
                        //- <p class="mb-4 text-dark">The generated Lorem Ipsum is therefore always free from repetition injected humour, or non-characteristic words etc.</p>
                        <a href='/products' class="banner-btn btn border-2 border-white rounded-pill text-dark py-3 px-5">Đến cửa hàng</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="position-relative">
                        <img src="/css/img/baner-1.png" class="img-fluid w-100 rounded" alt="">
                        <div class="d-flex align-items-center justify-content-center bg-white rounded-circle position-absolute" style="width: 140px; height: 140px; top: 0; left: 0;">
                            <h1 style="font-size: 100px;">8</h1>
                            <div class="d-flex flex-column">
                                <span class="h2 mb-0">%</span>
                                <span class="h4 text-muted mb-0"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Banner Section End -->

    
    <!-- Featurs Section Start -->
    <div class="container-fluid featurs py-5">
        <div class="container py-5">
            <div class="row g-4">
                <div class="col-md-6 col-lg-3">
                    <div class="featurs-item text-center rounded bg-light p-4">
                        <div class="featurs-icon btn-square rounded-circle bg-secondary mb-5 mx-auto">
                            <i class="fas fa-car-side fa-3x text-white"></i>
                        </div>
                        <div class="featurs-content text-center">
                            <h5>Miễn phí vận chuyển</h5>
                            <p class="mb-0">Với đơn hàng trên 200,000</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="featurs-item text-center rounded bg-light p-4">
                        <div class="featurs-icon btn-square rounded-circle bg-secondary mb-5 mx-auto">
                            <i class="fas fa-user-shield fa-3x text-white"></i>
                        </div>
                        <div class="featurs-content text-center">
                            <h5>Thanh toán bảo mật</h5>
                            <p class="mb-0">100% thanh toán bảo mật</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="featurs-item text-center rounded bg-light p-4">
                        <div class="featurs-icon btn-square rounded-circle bg-secondary mb-5 mx-auto">
                            <i class="fas fa-exchange-alt fa-3x text-white"></i>
                        </div>
                        <div class="featurs-content text-center">
                            <h5>30 ngày hoàn trả</h5>
                            <p class="mb-0">30 ngày hoàn trả miễn phí</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="featurs-item text-center rounded bg-light p-4">
                        <div class="featurs-icon btn-square rounded-circle bg-secondary mb-5 mx-auto">
                            <i class="fa fa-phone-alt fa-3x text-white"></i>
                        </div>
                        <div class="featurs-content text-center">
                            <h5>24/7 Hỗ trợ</h5>
                            <p class="mb-0">Hỗ trợ nhanh chóng 24/7</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Featurs Section End -->


    <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top">
        <i class="fa fa-arrow-up"></i>
    </a> 