extends ../../layout/user.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)

    <div class="wrapper">
        <nav class="nav">
            <div class="nav-logo">
                a(href="/" style="text-decoration: none")
                    <p>NÔNG SẢN GK</p>
            </div>
            <div class="nav-menu" id="navMenu">
            </div>
            <div class="nav-button">
                <button class="btn white-btn" id="loginBtn" onclick="login()">Đăng nhập</button>
                <button class="btn " id="registerBtn" onclick="register()">Đăng ký</button>
            </div>
            <div class="nav-menu-btn">
                <i class="bx bx-menu" onclick="myMenuFunction()"></i>
            </div>
        </nav>
    <!----------------------------- Form box ----------------------------------->    
        <div class="form-box">
            
            <!------------------- login form -------------------------->
            <div class="login-container" id="login">
                form(
                    action="/user/login"
                    method="POST"
                )
                    <div class="top">
                        <header>Đăng nhập</header>
                    </div>
                    <div class="form-group input-box">
                        <input type="email" class="form-control input-field" placeholder="Tên đăng nhập hoặc email" id="email" name="email" required>
                        <i class="bx bx-user"></i>
                    </div>
                    <div class="form-group input-box">
                        <input type="password" class="form-control input-field" placeholder="Mật khẩu" id="password" name="password" required>
                        <i class="bx bx-lock-alt"></i>
                    </div>
                    <div class="form-group input-box">
                        <input type="submit" class="submit" value="Đăng nhập">
                    </div>
                    <div class="two-col">
                        <div class="one">
                            <input type="checkbox" id="login-check">
                            <label for="login-check"> Remember Me</label>
                        </div>
                        <div class="two">
                            <label><a href="/user/password/forgot">Quên mật khẩu?</a></label>
                        </div>
                    </div>
                    <br>
                    <div class="top"> 
                        <span>Không có tài khoản? <a href="#" onclick="register()">Đăng ký</a></span>
                    </div>
                
            </div>
            <!------------------- registration form -------------------------->
            <div class="register-container" id="register">
                form(
                    action="/user/register"
                    method="POST"
                )
                    <div class="top">
                        <span>Đã có tài khoản? <a href="#" onclick="login()">Đăng nhập</a></span>
                        <header>Đăng ký</header>
                    </div>
                    <div class="two-forms">
                        <div class="form-group input-box">
                            <input type="text" class="form-control input-field" placeholder="Tên" id="firstName" name="firstName" required>
                            <i class="bx bx-user"></i>
                        </div>
                        <div class="form-group input-box">
                            <input type="text" class="form-control input-field" placeholder="Họ" id="lastName" name="lastName" required>
                            <i class="bx bx-user"></i>
                        </div>
                    </div>
                    <div class="form-group input-box">
                        <input type="email" class="form-control input-field" placeholder="Email" id="email" name="email" required>
                        <i class="bx bx-envelope"></i>
                    </div>
                    <div class="form-group input-box">
                        <input type="text" class="form-control input-field" placeholder="Số điện thoại" id="phone" name="phone" required>
                        <i class="bx bx-envelope"></i>
                    </div>
                    <div class="form-group input-box">
                        <input type="password" class="form-control input-field" placeholder="Mật khẩu" id="password" name="password" required >
                        <i class="bx bx-lock-alt"></i>
                    </div>
                    <div class="form-group input-box">
                        <input type="submit" class="submit" value="Đăng ký">
                    </div>
            </div>
        </div>
    </div>

