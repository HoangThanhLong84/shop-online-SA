extends ../../layout/user.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)

    <div class="wrapper">
        <nav class="nav">
            <div class="nav-logo">
                a(href="/" style="text-decoration: none")
                    <p>NÔNG SẢN GK</p>
            </div>
            <div class="nav-menu" id="navMenu">
            </div>
            <div class="nav-button">
                <button class="btn white-btn" id="loginBtn" onclick="login()">Quên mật khẩu</button>
            </div>
            <div class="nav-menu-btn">
                <i class="bx bx-menu" onclick="myMenuFunction()"></i>
            </div>
        </nav>
        <!----------------------------- Form box ----------------------------------->    
        <div class="form-box">
            
            <!------------------- login form -------------------------->
            <div class="login-container">
                form(
                    action="/user/password/otp"
                    method="POST"
                )
                    <div class="top">
                        <header>Nhập mã OTP xác nhận</header>
                    </div>
                    <div class="form-group input-box">
                        input(type="email" class="form-control input-field"  id="email" name="email" required value=email readonly)
                        <i class="bx bx-user"></i>
                    </div>
                    <div class="form-group input-box">
                        <input type="text" class="form-control input-field" placeholder="Nhập mã OTP" id="otp" name="otp" required>
                        <i class="bx bx-lock-alt"></i>
                    </div>
                    <div class="form-group input-box">
                        <input type="submit" class="submit" value="Xác nhận">
                    </div>
                    <br>
            </div>
        </div>
    </div>    